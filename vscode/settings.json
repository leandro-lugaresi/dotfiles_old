{
	"editor.rulers": [80, 120],
	"editor.tabSize": 4,
	"editor.insertSpaces": true,
	"editor.trimAutoWhitespace": true,
	"editor.detectIndentation": false,
	"editor.tabCompletion": "on",
	"editor.renderWhitespace": "boundary",
	"editor.cursorBlinking": "blink",
	"editor.minimap.enabled": true,
	"editor.fontWeight": "300",
	"editor.fontFamily": "'Cascadia Code Regular','Fira Code','Anonymous Pro'",
	"editor.fontLigatures": true,
	"editor.fontSize": 15,
	"explorer.openEditors.visible": 0,
	"explorer.confirmDragAndDrop": false,
	"window.restoreWindows": "none",
	"window.title": "${activeEditorMedium}${separator}${rootName}",
	"window.zoomLevel": 0,
	"files.autoSave": "off",
	"files.trimTrailingWhitespace": true,
	"go.coverOnSave": true,
	"go.testOnSave": true,
	"go.formatTool": "gofmt",
	"go.coverageDecorator": {
		"type": "gutter"
	},
	"go.formatFlags": ["-s", "-w"],
	"go.buildFlags": ["-v"],
	"go.lintTool": "golangci-lint",
	"go.docsTool": "guru",
	"go.useLanguageServer": true,
	"go.languageServerExperimentalFeatures": {
		"diagnostics": true, // for build and vet errors as you type
		"findReferences": true // for finding in-package references
	},
	"files.eol": "\n",
	"workbench.editor.showIcons": true,
	"workbench.startupEditor": "none",
	"extensions.ignoreRecommendations": true,
	"extensions.autoUpdate": true,
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"/vendor": true
	},
	"terminal.integrated.fontFamily": "'Hack Nerd Font','Anonymous Pro','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
	"terminal.external.osxExec": "iTerm.app",
	"git.autofetch": true,
	"git.confirmSync": false,
	"git.enableCommitSigning": true,
	"[go]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": false,
		"editor.snippetSuggestions": "bottom",
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	},
	"[json]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[yaml]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[ruby]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"gitlens.keymap": "alternate",
	"diffEditor.ignoreTrimWhitespace": false,
	"gitlens.advanced.messages": {
		"suppressLineUncommittedWarning": true,
		"suppressShowKeyBindingsNotice": true
	},
	"explorer.confirmDelete": false,
	"workbench.sideBar.location": "left",
	"breadcrumbs.enabled": true,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnType": false,
	"terminal.integrated.rendererType": "experimentalWebgl",
	"html.format.endWithNewline": true,
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.renderControlCharacters": false,
	"workbench.colorTheme": "Neon Genesis Dark",
	"liveshare.audio.joinCallBehavior": "accept",
	"git.suggestSmartCommit": false,
	"vscode-neovim.neovimPath": "/usr/bin/nvim"
}
